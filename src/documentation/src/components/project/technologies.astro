---
import Image from 'astro/components/Image.astro';
import Starlight from '../../assets/project/technologies/starlight.webp';
import Nestjs from '../../assets/project/technologies/nestjs.svg';
import Prisma from '../../assets/project/technologies/prisma.svg';
import Tailwind from '../../assets/project/technologies/tailwind.svg';
import Typescript from '../../assets/project/technologies/typescript.svg';
import Vercel from '../../assets/project/technologies/vercel.svg';
import Bun from '../../assets/project/technologies/bun.svg';
import Mysql from '../../assets/project/technologies/mysql.svg';
---

<div class="flex items-center flex-row flex-wrap p-7 space-x-4 py-0 px-4">
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://nestjs.com/" target="_blank">
      <span class="text-white">NestJs</span>
      <Image class="pl-2 w-10 h-10" src={Nestjs} alt="Nestjs" />
    </a>
  </div>
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://www.mysql.com/" target="_blank">
      <span class="text-white">Mysql</span>
      <Image class="pl-2 w-10 h-auto" src={Mysql} alt="Mysql" />
    </a>
  </div>
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://bun.sh/" target="_blank">
      <span class="text-white">Bun</span>
      <Image class="pl-2 w-10 h-auto" src={Bun} alt="Bun" />
    </a>
  </div>
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://www.prisma.io/" target="_blank">
      <span class="text-white">Prisma</span>
      <Image class="pl-2 w-8 h-auto stroke[#f00]" src={Prisma} alt="Prisma" />
    </a>
  </div>
</div>



<div class="flex items-center flex-row flex-wrap p-7 space-x-4 py-0 px-2">
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://starlight.astro.build/" target="_blank">
      <span class="text-white">Starlight</span>
      <Image class="pl-2 w-10 h-10" src={Starlight} alt="Starlight" />
    </a>
  </div>
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://tailwindcss.com/" target="_blank">
      <span class="text-white">Tailwind</span>
      <Image class="pl-2 w-10 h-auto" src={Tailwind} alt="Tailwind" />
    </a>
  </div>
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://www.typescriptlang.org/" target="_blank">
      <span class="text-white">Typescript</span>
      <Image class="pl-2 w-10 h-auto" src={Typescript} alt="Typescript" />
    </a>
  </div>
  <div class="flex items-center mt-4 p-4 rounded-lg hover:bg-neutral-50/5 transition-all delay-90 cursor-pointer">
    <a class="text-xl mr-2 no-underline flex w-30" href="https://vercel.com/" target="_blank">
      <span class="text-white">Vercel</span>
      <Image class="pl-2 w-10 h-auto" src={Vercel} alt="Vercel" />
    </a>
  </div>
</div>
</div>