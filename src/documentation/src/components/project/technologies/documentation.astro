---
import Image from 'astro/components/Image.astro';

import Starlight from '../../../assets/project/technologies/starlight.webp';
---

<div class="flex flex-col gap-y-4">
  <a class="flex items-center text-xl no-underline p-4 rounded-lg bg-[#23344b] hover:scale-105 transition-all delay-70 cursor-pointer" href="https://starlight.astro.build/" target="_blank">
    <span class="text-white">Starlight</span>
    <Image class="ml-2 w-9 h-9" src={Starlight} alt="Starlight" />
  </a>
  <a class="flex items-center text-xl no-underline p-4 rounded-lg bg-[#23344b] hover:scale-105 transition-all delay-70 cursor-pointer" href="https://starlight.astro.build/" target="_blank">
    <span class="text-white">Astro</span>
    <span class="icon-[vscode-icons--file-type-astro] ml-2 w-9 h-9"></span>
  </a>
  <a class="flex items-center text-xl no-underline p-4 rounded-lg bg-[#23344b] hover:scale-105 transition-all delay-70 cursor-pointer" href="https://tailwindcss.com/" target="_blank">
    <span class="text-white">Tailwind</span>
    <span class="icon-[logos--tailwindcss-icon] ml-2 w-9 h-9"></span>
  </a>
</div>